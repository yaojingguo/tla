--algorithm AltSpec {
 
    variables b = 0;
 
    process (Producers = 0)
      { pe: while (TRUE)
              {      await b = 0;
                put: skip ;
                px:  b := 1         }
      }
 
    process (Consumer = 1)
      { ce: while (TRUE)
              {      await b = 1;
                get: skip ;
                cx: b := 0         }
      }
}

