--------------------------------- MODULE HS ---------------------------------
EXTENDS Integers

a (+) b == (a + b) % 2

(***************************************************************************
--algorithm Handshake {

    variables p = 0, c = 0 ;
    process (Producer = 0)
      { pe: while (TRUE)
              {      await p =  c ;
                put: skip ;
                px:  p := p (+) 1   }
      }
      
    process (Consumer = 1)
      { ce: while (TRUE)
              {      await p # c ;
                get: skip ;
                cx:  c := c (+) 1  }
      }
}
 ***************************************************************************)


